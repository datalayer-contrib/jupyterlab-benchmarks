FROM jupyterlabbenchmarks/jlab-base:latest

RUN git clone \
  https://github.com/datalayer-contrib/jupyterlab \
  -b virtual_notebook/window \
  --depth 1

RUN cd jupyterlab && \
  pip install -e . && \
  yarn && \
  yarn build

ENTRYPOINT ["jupyterlab", "--dev-mode", "--notebook-dir=/home/jovyan" ]
